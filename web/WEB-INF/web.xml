<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>jsp/index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>sign_up</servlet-name>
        <servlet-class>com.chatting.sign_up</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sign_up</servlet-name>
        <url-pattern>/sign_up</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>sign_in</servlet-name>
        <servlet-class>com.chatting.sign_in</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sign_in</servlet-name>
        <url-pattern>/sign_in</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Chat</servlet-name>
        <servlet-class>com.chatting.Chat</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Chat</servlet-name>
        <url-pattern>/Chat</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getCount</servlet-name>
        <servlet-class>com.chatting.getCount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getCount</servlet-name>
        <url-pattern>/getCount</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getContent</servlet-name>
        <servlet-class>com.chatting.getContent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getContent</servlet-name>
        <url-pattern>/getContent</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>com.chatting.OnlineListener</listener-class>
    </listener>

</web-app>